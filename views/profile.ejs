<section class="card">
  <h2>My Betting History</h2>
  <% if (trades.length === 0) { %>
    <p class="muted">No bets placed yet.</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr><th>Market</th><th>Option</th><th>Amount</th><th>Date</th></tr>
      </thead>
      <tbody>
        <% trades.forEach(t => { %>
          <tr>
            <td><a href="/markets/<%= t.market_id %>"><%= t.market_title %></a></td>
            <td><%= t.option_name %></td>
            <td><%= t.amount %></td>
            <td><%= t.created_at.slice(0,10) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>
