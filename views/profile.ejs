<section class="card">
  <h2>My Created Markets</h2>
  <% if (markets.length === 0) { %>
    <p class="muted">You havenâ€™t created any markets yet.</p>
  <% } else { %>
    <ul>
      <% markets.forEach(m => { %>
        <li>
          <a href="/markets/<%= m.id %>"><%= m.title %></a>
          <% if (m.is_resolved) { %><span class="badge">Resolved</span><% } %>
        </li>
      <% }) %>
